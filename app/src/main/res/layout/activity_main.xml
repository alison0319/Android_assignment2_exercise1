<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tlicence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.assignment1.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Booking" />


    <EditText
        android:id="@+id/licence"
        android:layout_width="160dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:layout_marginRight="2dp"
        android:hint="Driver Licence"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/btnB"
        android:layout_width="161dp"
        android:layout_height="46dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="16dp"
        android:text="Book a Test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="2dp"
        android:text="Please select the date:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="140dp"
        android:text="Calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/tvt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="16dp"
        android:text="Please select the time:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn" />


    <RadioGroup
        android:id="@+id/RG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvt">


        <RadioButton
            android:id="@+id/btn9"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="9"></RadioButton>

        <RadioButton
            android:id="@+id/btn10"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="10"></RadioButton>

        <RadioButton
            android:id="@+id/btn11"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="11"></RadioButton>

        <RadioButton
            android:id="@+id/btn12"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="12"></RadioButton>

        <RadioButton
            android:id="@+id/btn13"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="13"></RadioButton>

        <RadioButton
            android:id="@+id/btn14"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="14"></RadioButton>

        <RadioButton
            android:id="@+id/btn15"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="15"></RadioButton>

        <RadioButton
            android:id="@+id/btn16"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="16"></RadioButton>
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:text="Driver Licence Number:"
        app:layout_constraintEnd_toStartOf="@+id/licence"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>



